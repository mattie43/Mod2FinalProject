<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>



  <h3 style="text-align:center">Sign Up</h3>

  <div class="form">
    <%= form_for @user do |f| %>
      <%= f.label :Username %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>
  
      <%= f.submit "Sign up" %>

    <% end %>

  </div>
</div>
