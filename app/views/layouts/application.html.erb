<!DOCTYPE html>
<html>
  <head>
    <title>Whoop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      
      <ul class="nav">
      <li><%= link_to "Home", root_path %></li>
      <% if session[:user_id]%>
      <li><%= link_to "Your Profile", user_path(session[:user_id]) %> </li>
      <% end%>

    <% if @current_user %>
        <li class="nav_right"> Signed in as: <b id='profile-name'><%= @current_user.name %></b></li>
        <li class="nav_right"> <%= link_to "Logout", logout_path, method: :delete %> </li>
    <% else %>
        <li class="nav_right"> <%= link_to "Sign Up", new_user_path %> </li>
        <li class="nav_right"><%= link_to "Login", new_login_path %> </li>
    <% end%>

    </ul>

    <%= yield %>
  </body>
</html>
