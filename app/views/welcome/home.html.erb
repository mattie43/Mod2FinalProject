
 <div>
 <h1 id='main-header'>Please enter search terms</h1>
<%= form_tag yelp_search_path, method: :get do %>
  Search Term: <%= text_field_tag :term, params[:term], :class => 'submit-button' %><br>
  Location: <%= text_field_tag :location, params[:location], :class => 'submit-button' %><br>
  <%= submit_tag "Search", :class => 'submit-button' %>
<% end %>
</div>
<% if flash[:results] %>
  <% flash[:results].each do |b| %>
    <%= link_to b[0], restaurant_path(b[1]) %><br>
  <% end %>
<% end %> 

